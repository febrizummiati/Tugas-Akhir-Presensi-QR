    <ImageView
        android:id="@+id/logo_ti"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/ti"
        app:layout_constraintBottom_toTopOf="@+id/txtLogin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/quicksand_bold"
        android:text="WELCOME"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/editEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_ti" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardMhs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/txtWelcome">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/imgSd"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/student"/>
            <TextView
                android:layout_below="@+id/imgSd"
                android:layout_margin="15dp"
                android:id="@+id/nama"
                android:textSize="23dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Febri Zummiati"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="@android:color/black"/>
            <TextView
                android:id="@+id/nim"
                android:layout_below="@id/nama"
                android:textSize="21dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1701081002"
                android:fontFamily="@font/quicksand_bold"
                android:textColor="@android:color/black"/>
            <Button
                android:id="@+id/btnScan"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:textSize="18dp"
                android:text="SCAN QR"
                android:textColor="@android:color/white"
                android:fontFamily="@font/quicksand_bold"
                android:layout_below="@id/nim"
                android:layout_centerHorizontal="true"
                android:layout_margin="15dp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>